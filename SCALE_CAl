#!/usr/bin/perl

use 5.010;
#use strict;
use warnings;

#define numbers

$a = 12;
$b = 98;

$c = $a + $b;

print "$c\n";

#after define several vars,how to interact with human and control its behacior

$a = 12.3;
$b = 98.5;

$c = $a + $b;

print "$c\n";

#**************************************************************************#

$a = 12.3;
$b = 98.5;

$c = $a - $b;

print "$c\n";

#**************************************************************************#

$a = 12.3;
$b = 98.5;

$c = $a * $b;

print "$c\n";

#**************************************************************************#

$a = 12.3;
$b = 98.5;

$c = $a / $b;

print "$c\n";

#**************************************************************************#

$a = 1.23e4;
$b = 1.11e6;

$c = $a + $b;

print "$c\n";

#**************************************************************************#

$a = 022;
$b = 035;

$c = $a + $b;

print "$c\n";

#**************************************************************************#

$a = 0x11;
$b = 0xdf;

$c = $a + $b;

print $c . "\n" . "\n" . "\n";

#**************************************************************************#